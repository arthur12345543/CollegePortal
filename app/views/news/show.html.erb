<table border='0' width='100%' bgcolor="#55b2f8" id="NewsTable">
  <tr  height='20'>
    <th width='100' ></th>
    <td><center><%= @News.title%></center></td>
    <th width='100' ></th>
  </tr>
  <tr height='20'>
    <td width='100' ></td>
    <td><center><%if @News.picture_file_size != nil%> <%= image_tag @News.picture%> <%end%></center><br/>
    <%= @News.text%><br></td>
    <td width='100' ></td>
  </tr>
  <tr height='20'>
    <td width='100' ></td>
    <td>
    <% if current_user && current_user.role && current_user.role.can_delete_news%>
      <%= link_to 'удалить', { :action => :destroy, :id => @News.id }, :method => :delete, :confirm => 'Are you sure?' %>
    <% end %>
    <br>
    <% if current_user && current_user.role && current_user.role.can_edit_news%>
      <%= link_to 'редактировать', { :action => :edit, :id => @News.id } %>
    <% end %>
    </td>
    <td width='100' ></td>
  </tr>
</table> 
