<div>
Афиша
 <% if current_user && current_user.role && current_user.role.can_add_news%>
<%= link_to 'Создать', new_showbill_path %>
 <%end%>

<br>
<%= will_paginate  %>

<% @showbill.each do |n| %>
<table border='0' width='100%' bgcolor="#E6E6FA">
  <tr  height='20'>
    <th width='100' ></th>
    <td><%= link_to n.title, :controller => "showbill",:action => :show, :id => n.id %></td>
    <th width='100' ></th>
  </tr>
  <tr height='20'>
    <td width='100' ></td>
    <td><%if n.picture_file_size != nil%> <%= image_tag n.picture (:small)%><%end%>
    <%= truncate(n.text, :length => 500)%><br></td>
    <td width='100' ></td>
  </tr>
  <tr height='20'>
    <td width='100' ></td>
    <td>Новость создана <%=n.created_at %></td>
    <td width='100' ></td>
  </tr>
</table> 
<br>
<% end %>
<%= will_paginate %>


</div>