<table border='0' width='100%' bgcolor="#E6E6FA">
  <tr  height='20'>
    <th width='100' ></th>
    <td><%= @showbill.title%></td>
    <th width='100' ></th>
  </tr>
  <tr height='20'>
    <td width='100' ></td>
    <td><%if @showbill.picture_file_size != nil%> <%= image_tag @showbill.picture%> <%end%>
    <%= @showbill.text%><br></td>
    <td width='100' ></td>
  </tr>
  <tr height='20'>
    <td width='100' ></td>
    <% if current_user && current_user.role && current_user.role.can_delete_showbill%>
      <td><%= link_to 'Destroy', { :action => :destroy, :id => @showbill.id }, :method => :delete, :confirm => 'Are you sure?' %></td>
    <% end %>
    <td width='100' ></td>
  </tr>
</table> 
