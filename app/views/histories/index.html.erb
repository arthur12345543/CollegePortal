
<center>
<% if current_user && current_user.role &&  current_user.role.can_add_history %>
<%= link_to 'Новая история', :action => :new %><br>
<% end %>
<% @histories.each do |n| %>
<%= link_to n.title, :id=> n.id, :action=> "show"%><br>
<% if current_user && current_user.role &&  current_user.role.can_delete_history %>
<%= link_to 'Удалить историю', { :action => :destroy, :id => n.id }, :method => :delete, :confirm => 'Вы действительно хотите удалить историю?' %>
<% end %>
<% end %>
</center>
